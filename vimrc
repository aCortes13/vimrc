syntax enable
colorscheme torte

" highlight matching parenthesis
set showmatch

" set tab character to appear 2 spaces wide
set tabstop=2

" size of an indent
set shiftwidth=2

" expand tabs to spaces
set expandtab

" set number of columns for tabs
set softtabstop=2

" automatically match the indent of the previous line
set autoindent

" highlight search while typing 
set incsearch

" causes all text matching the current search to be highlighted
set hlsearch

" Show the line and column number of the cursor position 
set ruler

" show line numbers 
set number

" t Auto-wrap text using testwidth
" c Auto-wrap comments using textwidth
" r Automatically insert the current comment leader after hitting enter
" n recognize numbered lists
set formatoptions+=tcrn
